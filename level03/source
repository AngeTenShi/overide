#include <stdio.h>
#include <stdlib.h>
#include <unistd.h>

int decrypt(char password)
{
    unsigned int i;
    unsigned int length;
    char encrypted[29];

    strcpy(encrypted, "Q}|u`sfg~sf{}|a3");
    length = strlen(encrypted);
    for (i = 0; i < length; ++i)
        encrypted[i] ^= password;
    if (!strcmp(encrypted, "Congratulations!"))
        return (system("/bin/sh"));
    else
        return puts("\nInvalid Password");
}

int test(int user_input, int secret)
{
    int result;
    int difference;

    switch (user_input - secret)
    {
        case 1:
        case 2:
        case 3:
        case 4:
        case 5:
        case 6:
        case 7:
        case 8:
        case 9:
        case 16:
        case 17:
        case 18:
        case 19:
        case 20:
        case 21:
            result = decrypt(user_input - secret);
            break;
        default:
            difference = rand();
            result = decrypt(difference);
            break;
    }
    return result;
}

int main(int argc, const char **argv, const char **envp)
{
    int user_input;
    int seed;

    seed = time(0);
    srand(seed);
    puts("***********************************");
    puts("*\t\tlevel03\t\t**");
    puts("***********************************");
    printf("Password:");
    scanf("%d", &user_input);
    test(user_input, 322424845);
    return 0;
}